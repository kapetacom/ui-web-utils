{
    "name": "@kapeta/ui-web-utils",
    "version": "0.0.29",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "description": "Utility functions for implementing Kapeta UI",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "kapeta"
    ],
    "license": "MIT",
    "author": {
        "email": "engineering@kapeta.com",
        "name": "Kapeta",
        "url": "https://kapeta.com"
    },
    "scripts": {
        "start": "rollup -c -w",
        "prebuild": "rm -rf dist",
        "build": "rollup -c",
        "test": "echo no tests yet",
        "prepublishOnly": "npm run build",
        "format": "prettier --write ."
    },
    "peerDependencies": {
        "@kapeta/ui-web-types": "<2",
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0"
    },
    "devDependencies": {
        "@kapeta/prettier-config": "^0.6.0",
        "@kapeta/ui-web-types": "<2",
        "@rollup/plugin-commonjs": "^21.1.0",
        "@rollup/plugin-node-resolve": "^14.1.0",
        "@rollup/plugin-typescript": "^8.5.0",
        "@types/react": ">=18.0.0",
        "@types/react-dom": ">=18.0.0",
        "prettier": "^2.8.8",
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0",
        "rollup": "^2.79.0",
        "rollup-plugin-dts": "^4.2.2",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-terser": "^7.0.2",
        "tslib": "^2.4.0",
        "typescript": "^4.8.3"
    },
    "prettier": "@kapeta/prettier-config",
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/changelog",
                {
                    "changelogFile": "CHANGELOG.md"
                }
            ],
            "@semantic-release/npm",
            "@semantic-release/github",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package.json",
                        "package-lock.json"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    }
}
